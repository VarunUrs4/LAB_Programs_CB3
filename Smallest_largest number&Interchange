// WAP to display the position of smallest and largest number in an array and interchange their respective positions.

#include<stdio.h>

int main()
{
    int i ,n,a[20],temp;
    int small , small_pos=0;
    int large , large_pos=0;
    printf("Enter the size of the array:");
    scanf("%d",&n);
    printf("\n Enter the elements of the array:\n");
    for(i=0;i<n;i++)
     scanf("%d",&a[i]);
    
    small = a[0];
    large = a[0];
    for(i=1;i<n;i++)
    {
      if(a[i]<small)
        {  
           small = a[i];
           small_pos =i;
        }
      if(a[i]>large)
        {
           large = a[i];
           large_pos =i;
        }
    }
    printf("\n The smallest of these numbers is :\n %d\n",small);
    printf("\n The position of the smallest number in the array is:  %d\n",small_pos);
    printf("\n The largest of these numbers is :\n %d\n",large);
    printf("\n The position of the largest number  in the array is:  %d\n",large_pos);
    
    temp = a[large_pos];
    a[large_pos] = a[small_pos];
    a[small_pos] = temp;
    printf("\n The new array is :\n");
    for(i=0;i<n;i++)
      printf("%d \t",a[i]);
    return 0;
}
