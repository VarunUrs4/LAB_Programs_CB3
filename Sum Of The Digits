//Program to calculate sum of the digits entered by the user

#include<stdio.h>
int sum(int i,int n);

int main()
{
    int i=0 ,n=0;
    printf("\n Enter the number : ");
    scanf("%d",&i);
    sum( i, n);
    return 0;
}

int sum(int i,int n)

{
    while(i!=0)
    {
    n += i%10;
    i /=10;
    }
    printf("\nThe sum of the digits : %d\n", n);
    return n;
}
